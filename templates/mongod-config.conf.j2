systemLog:
  destination: file
  logAppend: true
  path:  {{ mongodb_log_file }}

storage:
  dbPath: {{ mongodb_data_dir }}/config
  journal:
    enabled: true

# Cluster: {{ cluster_name }}
# useRepSetConfig: true
# region: us-east-1
  engine: wiredTiger

processManagement:
  fork: true
  pidFilePath: {{ mongodb-config_pid_file }}

net:
  port: {{ mongodb_port }}
  {% if not mongodb_bind_all %}
  bindIp: {{ mongodb_bind_ip }}
  {% endif %}
  bindIpAll: true

replication:
   replSetName: {{ replSetName }}
