processManagement:
  fork: true
  pidFilePath: {{ mongodb_pid_path }}/mongod.pid

net:
  port: {{ mongodb_port }}
  {% if not mongodb_bind_all %}
  bindIp: {{ mongodb_bind_ip }}
  {% endif %}

